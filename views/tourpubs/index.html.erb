<p id="notice"><%= notice %></p>

<h1>Pub Crawl</h1>



<% if user_signed_in? %>  
<table><tr><th>
<%= link_to '<button>Join This Tour!</button>'.html_safe, new_tourpub_path %>
</th>
<th>&nbsp;</th>
<th>&nbsp;</th>
<th>
<form method="get" action="/">
  <button type="submit">Not This Tour?</button>
</form> 
</th>
</tr></table>
<% end %>

<br>
<div <div class="container">
  <table class="table table-hover"  style="background: #ffffff;">
      <tr style="background: #d3d3d3;">
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Description</th>
      <th>Date</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tourpubs.each do |tourpub| %>
      <tr>
        <td><%= tourpub.fname %></td>
        <td><%= tourpub.lname %></td>
        <td><%= tourpub.email %></td>
        <td><%= tourpub.description %></td>
        <td><%= tourpub.date %></td>
        <td><%= tourpub.cost %></td>
         <% if user_signed_in? %> 

        <td><%= link_to 'Show', tourpub %></td>
        <td><%= link_to 'Edit', edit_tourpub_path(tourpub) %></td>
        <td><%= link_to 'Destroy', tourpub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>






