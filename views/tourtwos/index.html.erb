<div <div class="container">
  <table class="table table-hover"  style="background: #ffffff;">
      <tr style="background: #d3d3d3;">
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Description</th>
      <th>Date</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tourtwos.each do |tourtwo| %>
      <tr>
        <td><%= tourtwo.fname %></td>
        <td><%= tourtwo.lname %></td>
        <td><%= tourtwo.email %></td>
        <td><%= tourtwo.description %></td>
        <td><%= tourtwo.date %></td>
        <td><%= tourtwo.cost %></td>
         <% if user_signed_in? %> 

        <td><%= link_to 'Show', tourtwo %></td>
