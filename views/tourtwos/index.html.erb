        <td><%= link_to 'Edit', edit_tourtwo_path(tourtwo) %></td>
        <td><%= link_to 'Destroy', tourtwo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

