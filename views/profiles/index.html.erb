<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>
<br>
<div <div class="container">
  <table class="table table-hover"  style="background: #ffffff;">
    <thead>
      <tr style="background: #d3d3d3;">
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
 
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.address %></td>
  
        <% if user_signed_in? %>
        <td><%= link_to 'Show', profile %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<% if user_signed_in? %>

<table>
  <tr>
<th>
<%= link_to '<button>New Profile</button>'.html_safe, new_profile_path %>
</th>
<th>&nbsp;</th>
<th>&nbsp;</th>
<th>
<form method="get" action="/">
  <button type="submit">Book Tour!</button>
</form> 
</th>
</tr>
</table>

<% end %>